# Copy this file to .env and fill in your values

# ====== Required ======

# Database
DATABASE_URL=postgresql://redstone:redstone@localhost:5432/redstone
POSTGRES_USER=redstone
POSTGRES_PASSWORD=redstone
POSTGRES_DB=redstone

# Redis
REDIS_URL=redis://localhost:6379

# Security (generate a secure random string)
SECRET_KEY=your-secret-key-change-in-production

# ====== GitHub OAuth (for GitHub integration) ======

# Create an OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:8000/github/callback

# ====== LLM API Keys (at least one required) ======

# Anthropic (recommended)
ANTHROPIC_API_KEY=

# OpenAI
OPENAI_API_KEY=

# Google Generative AI
GOOGLE_API_KEY=

# OpenRouter (multi-model access)
OPENROUTER_API_KEY=

# ====== Stripe (for billing - optional) ======
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ====== URLs ======
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
